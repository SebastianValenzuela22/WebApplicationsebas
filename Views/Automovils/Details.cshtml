@model WebApplicationsebas.Models.Automovil

@{
    ViewData["Title"] = "Detalles | Automóvil";
}

<div class="container">
    <h1 class="my-4 text-center text-uppercase" style="color: #2c3e50;">Detalles del Automóvil</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Año)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Año)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Foto)</dt>
                <dd class="col-sm-10">
                    <img src="@Model.Foto" alt="Imagen del automóvil" class="img-fluid rounded" style="max-width: 250px; max-height: 250px;">
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
